<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/intro_background_fit"
    tools:context = ".LoginActivity">

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:lineSpacingExtra="16sp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id = "@+id/main_title"
        android:fontFamily="@font/font"
        android:text="복지는 언제나 우리 가까이에 있었습니다">
    </TextView>

    <TextView
        android:id="@+id/sub_title"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/main_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="13sp"
        android:textStyle="bold"
        android:fontFamily="@font/font"
        android:textColor="#99ffffff"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:text="모두의 복지로 간편하게 찾아보세요">
    </TextView>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/sub_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="15dp"
        android:text="아이디"
        android:textStyle="normal"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/font"
        android:id = "@+id/id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/et_Id"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="25dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:background="@drawable/et_design_login"
        android:ems="10"
        android:hint="아이디를 입력하세요"
        android:textSize="17dp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_label"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="text" />

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_Id"
        android:id = "@+id/pwd_label"
        android:text = "비밀번호"
        android:fontFamily="@font/font"
        android:textStyle="normal"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="25dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:background="@drawable/et_design_login"
        android:ems="10"
        android:hint="비밀번호를 입력하세요"
        android:textSize="17dp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPassword"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/pwd_label" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="로그인"
        android:background="@drawable/btn_design_login"
        android:fontFamily="@font/font"
        android:lineSpacingExtra="6sp"
        android:textStyle="normal"
        android:textSize="17dp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_pwd" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/font"
        android:background="@null"
        android:lineSpacingExtra="55sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginTop="17dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
