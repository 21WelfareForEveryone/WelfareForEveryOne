<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#24bfad"
    android:id="@+id/toolbar_chatbot"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id = "@+id/toggle_chat_mode_1"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:textSize="8sp"
                    android:padding = '0dp'
                    android:layout_gravity="center"
                    android:text = "복지정보"/>
                <Button
                    android:id = "@+id/toggle_chat_mode_2"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:textSize="8sp"
                    android:padding = '0dp'
                    android:layout_gravity="center"
                    android:text = "일상대화"/>
            </LinearLayout>
            <TextView
                android:text = "복지 챗봇"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/font"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:contentDescription="텍스트를 음성으로 변환합니다."
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_TTS"
                android:src = "@drawable/ic_speach_btn"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
