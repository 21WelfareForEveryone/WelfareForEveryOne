<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileImageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_centerVertical="true"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:padding="0dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_baby"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baby"
            app:riv_corner_radius="10dp" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_child"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/children"
            app:riv_corner_radius="10dp" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_woman"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/woman"
            app:riv_corner_radius="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:padding="0dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_man"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/man"
            app:riv_corner_radius="10dp" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_old_woman"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/old_woman"
            app:riv_corner_radius="10dp" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_old_man"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/old_man"
            app:riv_corner_radius="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:padding="0dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_pregnant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pregnant"
            app:riv_corner_radius="10dp" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_multicultural"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/multicultural"
            app:riv_corner_radius="10dp" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_disabled"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/disabled"
            app:riv_corner_radius="10dp" />
    </LinearLayout>
</LinearLayout>